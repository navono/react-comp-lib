    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-postcss-modules": "^2.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "sass-loader": "^10.1.1",
    "shelljs": "^0.8.4",
